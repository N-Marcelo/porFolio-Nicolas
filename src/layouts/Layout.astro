---
import '@fontsource-variable/onest'
import Header from '../components/Header.astro'
import '../styles/global.css'
import Footer from '../components/Footer.astro'

interface Props {
	title : string
	description: string
}
const {description, title} = Astro.props
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="{description}" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<description>{description}</description>
		<title>{title}</title>
	</head>

  <body class="px-4 min-h-screen bg-[#0b111e]"> <!-- Color de fondo que quieres -->
    <div class="fixed inset-0 z-[-1]">
      <div class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(100%_125%_at_50%_15%,rgba(0,0,0,0)_35%,rgba(6,4,11,1)_65%)]"></div>
    </div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	:root{
		color-scheme: light dark;
	}
	html{
		font-family: 'Onest Varaible', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
