---
const { href } = Astro.props;
---
<a
    class="
    w-72
    bg-white/5
    border border-white/10 rounded-full
    flex justify-center items-center gap-x-2 
    py-2 px-2 md:py-3 md:px-4
    text-xs lg:text-base
    transition
    hover:scale-110 hover:bg-white/10 "
    {...Astro.props}
    target="_blank"
    rel="noopener noreferrer"
>
    <slot />
</a>
